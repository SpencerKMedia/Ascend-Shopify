{% if section.blocks.size > 0 %}
    <div class="swiper-container mb-3" id="{{ block.id }}" {{ block.shopify_attributes }}>
        <div class="swiper-wrapper">
    {% for block in section.blocks %}
        <div id="slide-{{ block.id }}" {{ block.shopify_attributes }} class="swiper-slide" {% if forloop.first == true %}
               data-setbg="{{ block.settings.image | img_url: '2000x1000' }}"
            {% endif %} style="background-image: url('{{ block.settings.image | img_url: '2000x1000' }});">

            <div class="container">
      			<div class="row">
            <div class="col-xl-6 {{ block.settings.column_align }} text-white">
                    <span>{{ block.settings.heading__secondary }}</span>
                    <h2>{{ block.settings.heading__primary }}</h2>
                    <p class="text-white">{{ block.settings.content }}</p>
                    <a href="{{ block.settings.link }}" class="site-btn sb-line btn btn-dark rounded-0">{{ block.settings.text }}</a>
                  </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% if section.blocks.size > 1 %}
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <div class="container">
        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
    {% else %}
    {% endif %}
</div>
{% endif %}

{% schema %}
  {
    "blocks": [
      {
        "type": "Slide",
        "name": "Hero Slider",
        "limit" : 6,
        "settings": [
          {
            "id": "link",
            "type": "url",
            "label": "Slide Link"
          },
          {
            "id": "heading__primary",
            "type": "text",
            "label": "Slide Title (Primary)"
          },
          {
            "id": "heading__secondary",
            "type": "text",
            "label": "Slide Title (Secondary)"
          },
          {
            "id": "content",
            "type": "textarea",
            "label": "Slide Paragraph"
          },
          {
            "id": "text",
            "type": "text",
            "label": "Slide Button"
          },
          {
            "id": "image",
            "type": "image_picker",
            "label": "Slide Image"
          },{
           "type": "select",
           "id": "columnalign",
           "options": [
              { "value": "", "label": "Align Left"},
              { "value": "ml-auto", "label": "Align Right"},
              { "value": "offset-md-3", "label": "Align Center"}
           ],
           "label": "Column Alignment"
        }
        ]
      }
    ]
  }
{% endschema %}