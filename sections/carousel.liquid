<div class="swiper-container mb-{{section.settings.spacing_vertical}} swiper--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="slider" id="{{ block.id }}">

    <div class="swiper-wrapper">

      {% for block in section.blocks %}

        <div id="slide-{{ block.id }}" {{ block.shopify_attributes }} class="swiper-slide bg-overlay" {% if forloop.first == true %}
               
            {% endif %} style="background-image: url('{{ block.settings.image | img_url: '2000x1000' }});">

            <div class="container">
      			<div class="row">
            <div class="col-md-6 {{ block.settings.columnalign }} text-white">
                    <span>{{ block.settings.heading__secondary }}</span>
                    <h2>{{ block.settings.heading__primary }}</h2>
                    <p class="text-white">{{ block.settings.content }}</p>
                    <a href="{{ block.settings.link }}" class="site-btn sb-line btn btn-dark rounded-0">{{ block.settings.text }}</a>
                  </div>
                </div>
            </div>
        </div>
      {% endfor %}

    </div>
        
        {% if section.blocks.size > 1 %}
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <div class="container">
                <!-- If we need navigation buttons -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        {% endif %}

</div>

